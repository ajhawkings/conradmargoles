{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "next/core-web-vitals"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "camelcase": ["error"],
    "dot-notation": ["error"],
    "eqeqeq": ["error"],
    "no-return-assign": ["error"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "sort-imports": ["error", { "allowSeparatedGroups": true }],
    "spaced-comment": ["error"]
  }
}
